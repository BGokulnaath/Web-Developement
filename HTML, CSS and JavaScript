    font-size: 20px;
    line-height: 2;
    letter-spacing: 1px;
}
body{
    width: 600px;
    margin: 0 auto;
    background-color: violet;
    padding: 0 20px 20px 20px;
    border: 5px solid black;
}
img{
    display: block;
    margin: 0 auto;
    width: 400px;
}

